<form method="post" action="{{ path('course_delete', {'id': course.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
    <button class="btn btn-danger btn-lg">Удалить</button>
</form>
